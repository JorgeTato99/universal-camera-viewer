# Universal Camera Viewer - Variables de Entorno
# Copiar este archivo a .env y configurar según tu entorno

# === CONFIGURACIÓN GENERAL ===
DEBUG=False
LOG_LEVEL=INFO
LOG_FILE=camera-viewer.log

# === API ===
API_HOST=0.0.0.0
API_PORT=8000

# === WEBSOCKET ===
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# === STREAMING ===
DEFAULT_FPS=30
DEFAULT_QUALITY=medium
STREAM_BUFFER_SIZE=5

# === CÁMARAS ===
# Dahua
DAHUA_USERNAME=admin
DAHUA_PASSWORD=your_password_here
DAHUA_IP=192.168.1.172
DAHUA_RTSP_PORT=554
DAHUA_RTSP_PATH=/cam/realmonitor?channel=1&subtype=0

# TP-Link
TPLINK_USERNAME=admin
TPLINK_PASSWORD=your_password_here
TPLINK_IP=192.168.1.111
TPLINK_RTSP_PORT=554
TPLINK_RTSP_PATH=/stream1

# Steren
STEREN_USERNAME=admin
STEREN_PASSWORD=your_password_here
STEREN_IP=192.168.1.122
STEREN_RTSP_PORT=554
STEREN_RTSP_PATH=/Streaming/Channels/101

# Hikvision
HIKVISION_USERNAME=admin
HIKVISION_PASSWORD=your_password_here
HIKVISION_IP=192.168.1.133
HIKVISION_RTSP_PORT=554
HIKVISION_RTSP_PATH=/Streaming/Channels/101

# === PUERTOS COMUNES ===
DEFAULT_RTSP_PORT=554
DEFAULT_HTTP_PORT=80
DEFAULT_ONVIF_PORT=80
DEFAULT_SDK_PORT=37777

# === TIMEOUTS Y REINTENTOS ===
CONNECTION_TIMEOUT=10
MAX_RETRIES=3
RETRY_DELAY=1.0

# === FEATURE FLAGS ===
ENABLE_MOCK_STREAMS=True
CHECK_CONNECTIVITY=True

# === CACHE ===
CACHE_TTL=300

# === BASE DE DATOS (futuro) ===
# DATABASE_URL=sqlite:///./camera_viewer.db

# === ONVIF ===
ONVIF_WSDL_PATH=./sdk/wsdl 